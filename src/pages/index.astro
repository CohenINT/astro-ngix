---
import MainLayout from '../layouts/MainLayout.astro';
import ReactComponent from '../components/ReactComponent';
import { formatDate } from '../utils';

const pageTitle = "Welcome to My Astro Site";
const currentDate = formatDate(new Date());
---

<MainLayout title={pageTitle}>
  <main>
    <h1>{pageTitle}</h1>
    <p>Current date: {currentDate}</p>
    
    <div class="react-component-wrapper">
      <ReactComponent initialCount={5} client:load />
    </div>
    
    <div class="links">
      <a href="/some-tabu-path">Go to a dynamic tabu path</a>
    </div>
  </main>
</MainLayout>

<style>
  main {
    margin: 2rem auto;
    max-width: 800px;
    padding: 0 1rem;
  }
  
  h1 {
    color: #333;
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }
  
  .react-component-wrapper {
    margin: 2rem 0;
    padding: 1.5rem;
    border-radius: 8px;
    background-color: #f9f9f9;
  }
  
  .links {
    margin-top: 2rem;
  }
  
  .links a {
    color: #2563eb;
    text-decoration: none;
  }
  
  .links a:hover {
    text-decoration: underline;
  }
</style>